%p(data-bind="visible: countryName() == ''") Mit der Maus über Länder fahren um mehr Informationen zu bekommen.
.country-info(data-bind="visible: countryName().length > 0")
  %h2 German Arms Exports
  %h5(data-bind="text: countryName")
  %ul.exports
    %li.yes-no
      .title
        Approved arms export licenses
      .value
        %span(data-bind="text: yesNoText(armsExports())")
    %li
      .title
        Volume of arms export licenses 2013
      .value(data-bind="text: formatToMillions(exports2013())")
    %li.sum(data-bind="visible: armsExports")
      .title
        Value of arms export licenses 1999-2013
      .value(data-bind="text: formatToMillions(germanArmsExport())")
    %li.yes-no
      .title
        Actual exports of weapons of war
      .value
        %span(data-bind="text: yesNoText(weaponsExports())")
    %li(data-bind="visible: weaponsExports")
      .title
        Volume of exports of weapons of war 2013
      .value(data-bind="text: formatToMillions(warWeapons2013())")
    %li.sum(data-bind="visible: weaponsExports")
      .title
        Volume of exports of weapons of war 1999-2013
      .value(data-bind="text: formatToMillions(germanWeaponsExport())")
  .ranks
    %ul.rank.gmi
      %li GMI-Rank
      %li.value(data-bind="text: gmiRank")
      %li of
      %li.count(data-bind="text: gmiCountryCount")
  %h5 EU Common Position for Arms Exports criteria
  %ul.categories
    %li.category
      .category-title
        Arms Embargos
      %ul.signal(data-bind="with: armsEmbargo")
        %li.light.red(data-bind="css: { active: redActive }")
        %li.light.yellow(data-bind="css: { active: yellowActive }")
        %li.light.green(data-bind="css: { active: greenActive }")
    %li.category
      .category-title
        Human Rights
      %ul.signal(data-bind="with: humanRights")
        %li.light.red(data-bind="css: { active: redActive }")
        %li.light.yellow(data-bind="css: { active: yellowActive }")
        %li.light.green(data-bind="css: { active: greenActive }")
    %li.category
      .category-title
        Internal Conflict
      %ul.signal(data-bind="with: internalConflict")
        %li.light.red(data-bind="css: { active: redActive }")
        %li.light.yellow(data-bind="css: { active: yellowActive }")
        %li.light.green(data-bind="css: { active: greenActive }")
    %li.category
      .category-title
        Regional Security
      %ul.signal(data-bind="with: regionalSecurity")
        %li.light.red(data-bind="css: { active: redActive }")
        %li.light.yellow(data-bind="css: { active: yellowActive }")
        %li.light.green(data-bind="css: { active: greenActive }")
    %li.category
      .category-title
        Security of Member States
      %ul.signal(data-bind="with: securityMemberStates")
