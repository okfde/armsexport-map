    = #javascript_include_tag  "//cdnjs.cloudflare.com/ajax/libs/d3/3.4.11/d3.js"
    = javascript_include_tag  "../bower_components/mapbox.js/mapbox.js"
    = javascript_include_tag  "../bower_components/topojson/topojson.js"
    = javascript_include_tag  "../bower_components/leaflet/dist/leaflet.js"
    = javascript_include_tag  "../bower_components/mapbox.js/mapbox.js"
    = javascript_include_tag  "../bower_components/d3/d3.js"
    = javascript_include_tag  "../bower_components/underscore/underscore.js"
    = javascript_include_tag  "../bower_components/omnivore/leaflet-omnivore.min.js"
